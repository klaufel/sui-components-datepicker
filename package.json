{
  "name": "adevinta-technical-test",
  "version": "1.0.0",
  "description": "Technical test for Frontend Engineer for DesignSystems",
  "scripts": {
    "storybook": "start-storybook -p 9001",
    "storybook:build": "build-storybook -o storybook -c .storybook",
    "eslint:check": "eslint \"./**/*.{js,jsx}\"",
    "eslint:fix": "eslint \"./**/*.{js,jsx}\" --fix",
    "prettier:check": "prettier \"./**/*.{js,jsx,mdx}\" --check",
    "prettier:write": "prettier \"./**/*.{js,jsx,mdx}\" --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest --updateSnapshot",
    "test:coverage": "jest --coverage",
    "test:coverage-web": "jest --coverage && open coverage/lcov-report/index.html"
  },
  "author": "Juan Carlos Ruiz <klaufel@gmail.com>",
  "eslintConfig": {
    "extends": [
      "./node_modules/@s-ui/lint/eslintrc.js"
    ]
  },
  "prettier": "./node_modules/@s-ui/lint/.prettierrc.js",
  "stylelint": {
    "extends": "./node_modules/@s-ui/lint/stylelint.config.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "jest": {
    "rootDir": "src",
    "moduleNameMapper": {
      ".+\\.(css|styl|less|sass|scss)$": "jest-css-modules-transform"
    }
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@s-ui/component-dependencies": "^1.5.0",
    "@s-ui/lint": "^3.14.0",
    "@storybook/addon-a11y": "^5.3.9",
    "@storybook/addon-actions": "^5.3.9",
    "@storybook/addon-docs": "^5.3.8",
    "@storybook/addon-knobs": "^5.3.8",
    "@storybook/react": "^5.3.8",
    "@testing-library/react": "^9.4.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "jest": "^25.1.0",
    "jest-css-modules-transform": "^4.0.0",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2"
  }
}
